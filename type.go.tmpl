{{- define "type" -}}

{{- /* Required args */}}
{{- $typeMap := .TypeMap -}}
{{- $type := .Type -}}

{{$type.Name}}:
    {{- if isEnumType $type}}
      type: string
      {{if gt (len $type.Fields) 0 -}}
      description: Represented as {{$type.Type}} on the server side
      {{end -}}
      enum:
        {{- range $i, $field := $type.Fields}}
        - "{{if eq (printf `%v` $i) (printf `%v` $field.Value)}}{{$field.Name}}{{else}}{{$field.Value}}{{end}}"
        {{- end -}}
    {{else}}
      type: object
      {{- if gt (len $type.Fields) 0}}
      {{- if gt (len $type.RequiredFields) 0}}
      required:
      {{- range $i, $field := $type.RequiredFields }}
        - {{$field.Name}}
      {{- end }}
      {{- end }}
      properties:
      {{- end -}}
      {{- range $i, $field := $type.Fields }}
        {{$field.Name -}}:
          {{ template "fieldType" dict "Type" $field.Type "TypeMap" $typeMap "Indent" "          " }}
          {{- range $meta := $field.Meta -}}
            {{- range $metaKey, $metaValue := $meta -}}
              {{- if and (hasPrefix $metaKey "openapi.") (eq $metaKey "openapi.pattern") }}
          {{ printf "%s: |" (trimPrefix $metaKey "openapi.") }}
            {{ $metaValue }}
          {{ else }}
          {{ printf "%s: %s" (trimPrefix $metaKey "openapi.") $metaValue }}
              {{- end -}}
            {{- end -}}
          {{- end -}}
      {{- end -}}
    {{- end -}}
{{- end -}}
